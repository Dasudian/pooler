{erl_opts, [{parse_transform, lager_transform}]}.
{deps, [
    {poolboy, ".*", {git, "git://github.com/devinus/poolboy.git", {tag, "1.5.1"}}},
    {riakc, ".*", {git, "https://github.com/basho/riak-erlang-client.git", {tag, "2.5.3"}}},
    {lager, ".*", {git, "git://github.com/erlang-lager/lager.git", {tag, "3.5.0"}}}
]}.

{relx, [{release, {pooler, "0.1.0"},
    [pooler, crypto]},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
    {include_erts, true}]}]
}]
}.

{recursive_cmds, [clean]}.
{overrides, [{override, hamcrest, [{plugins, []}]}]}.

